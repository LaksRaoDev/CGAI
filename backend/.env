# Environment Configuration for Content Generation AI
# File: backend/.env

# Flask Configuration
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///content_ai.db

# AI Model Configuration
MODEL_CACHE_DIR=./data/models
DEFAULT_MODEL=gpt2
MAX_TOKENS=512
TEMPERATURE=0.7

# API Configuration
PORT=5000
API_PREFIX=/api/v1

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:5000,http://localhost:5000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO

# Optional: Hugging Face API Token (for private models)
# HUGGINGFACE_API_TOKEN=your_token_here

# Production Database (MySQL/PostgreSQL)
# DATABASE_URL=mysql://username:password@localhost/content_ai
# DATABASE_URL=postgresql://username:password@localhost/content_ai